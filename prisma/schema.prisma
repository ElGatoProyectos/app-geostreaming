generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Admin {
  id Int @id @default(autoincrement())

  full_name String
  phone     String
  email     String
  username  String
  password  String
  logged    String @default("y")
}

model User {
  id        Int     @id @default(autoincrement())
  ref_id    Int?
  role      String
  full_name String
  dni       String?
  phone     String
  email     String?
  balance   Decimal @default(0.0)
  username  String
  password  String
  enabled   String  @default("y")
}

model Platform {
  id          Int       @id @default(autoincrement())
  name        String
  description String
  Account     Account[]
}

model Account {
  id          Int @id @default(autoincrement())
  platform_id Int

  Platform Platform @relation(fields: [platform_id], references: [id])
}
