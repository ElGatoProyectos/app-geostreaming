generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Admin {
  id        Int    @id @default(autoincrement())
  full_name String
  phone     String
  email     String
  username  String
  password  String
  logged    String @default("y")
}

model User {
  id        Int     @id @default(autoincrement())
  ref_id    Int?
  role      String  @default("USER")
  full_name String
  dni       String?
  phone     String
  email     String?
  balance   Decimal @default(0.0)
  username  String
  password  String
  enabled   String  @default("y")
}

model Product {
  id          Int       @id @default(autoincrement())
  platform_id Int
  platform    Platform  @relation(fields: [platform_id], references: [id])
  accounts    Account[]
  Price       Price[]
  createdAt   DateTime  @default(now())
}

model Account {
  id                 Int      @id @default(autoincrement())
  is_active          Boolean
  email              String
  password           String
  pin                String
  numb_profiles      Int
  numb_days_duration Int
  status             String
  platform           Platform @relation(fields: [platform_id], references: [id])
  platform_id        Int
  product            Product  @relation(fields: [product_id], references: [id])
  product_id         Int
}

model Price {
  id         Int     @id @default(autoincrement())
  price      Decimal
  product    Product @relation(fields: [product_id], references: [id])
  product_id Int
  role       Role    @relation(fields: [role_id], references: [id])
  role_id    Int
}

model Platform {
  id          Int       @id @default(autoincrement())
  name        String
  description String
  products    Product[] @relation()
  account     Account[]
}

model Role {
  id     Int     @id @default(autoincrement())
  name   String
  prices Price[]
}
